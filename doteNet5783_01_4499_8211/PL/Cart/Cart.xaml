<Page x:Class="PL.Cart.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Cart"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cart">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView x:Name="OrderItemView" 
                  d:ItemsSource="{d:SampleData ItemCount=5}" 
                  MouseDoubleClick="UpdateAmount"
                  Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Name="PaymentLabel"
            HorizontalAlignment="Left" 
            Margin="163,192,0,0" 
            TextWrapping="Wrap" 
            Text="סך הכל לתשלום" 
            VerticalAlignment="Top"
            Height="37" Width="162"
            FontSize="22" FontWeight="Bold"/>
        <TextBlock Name="TotalPriceShow"
            HorizontalAlignment="Left" 
            Margin="38,186,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding TotalPrice}" 
            VerticalAlignment="Top" 
            Width="120" RenderTransformOrigin="0.933,0.352" Height="37"/>
        <Button x:Name="ApproveOrder"
                Content="למעבר לקופה"
                HorizontalAlignment="Left"
                Margin="223,310,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="0.473,-0.704" 
                Width="155" Height="54"
                FontSize="20"/>
        <Button Name="GoBackToCatalog"
                Content="להמשך קניה"
                HorizontalAlignment="Left"
                Margin="41,310,0,0" 
                VerticalAlignment="Top"
                Width="154" Height="54"
                FontSize="20" Click="GoBackToCatalog_Click"/>
        <TextBlock Name="OrderSummery"
                   HorizontalAlignment="Left"
                   Visibility="{Binding }"
                   Margin="193,60,0,0" 
                   TextWrapping="Wrap"
                   Text=":סיכום הזמנה" 
                   VerticalAlignment="Top"
                   FontSize="22" FontWeight="Bold"/>
        <TextBlock Name="LabelAmount"
            HorizontalAlignment="Left" 
            Margin="172,109,0,0" 
            TextWrapping="Wrap" 
            Text="מוצרים בעגלה" 
            FontSize="22"
            VerticalAlignment="Top"
            Width="155"/>
        <TextBlock  Name="AmountInCart"
            HorizontalAlignment="Left" 
            Margin="313,109,0,0" 
            TextWrapping="Wrap" 
             Visibility="{Binding }"
            Text="0" 
            VerticalAlignment="Top" 
            FontSize="22"
            Width="77"/>
        <Image Name="CryBaby"
            HorizontalAlignment="Left" 
            Height="362" 
            Margin="250,0,0,0" 
            VerticalAlignment="Center" 
            Width="314" Source="/Cart/crybaby.png" Grid.ColumnSpan="2"/>
        <Button Name="GoToCatalog"
                Content="בואו נתחיל"
                HorizontalAlignment="Left"
                Margin="323,372,0,0" 
                VerticalAlignment="Top"
                Width="154" Height="54"
                FontSize="20" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
