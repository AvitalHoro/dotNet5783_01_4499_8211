<Page x:Class="PL.Cart.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Cart"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converter="clr-namespace:Converters"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      Title="Cart">
    <Page.Resources>
        <converter:IntToVisibiltyConverter x:Key="IntToVisibiltyConverter"/>
    </Page.Resources>

    <Grid x:Name="CartGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="375"></ColumnDefinition>
            <ColumnDefinition Width="425"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView x:Name="OrderItemView" 
                  ItemsSource="{Binding Path=OrderItems}"
                  Margin="0,10,0,-10" 
                  Grid.Column="1" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="400">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding Path}" 
                               Height="100" Grid.Column="3"></Image>
                        <StackPanel Grid.Column="2" >
                            <TextBlock Text="{Binding NameProduct}"></TextBlock>
                            <TextBlock Text="{Binding Price}" FontSize="20"></TextBlock>
                        </StackPanel>
                        <local:NumericUpDownControl  Grid.Column="1"
                                          x:Name="UpdateAmount"   
                                          Value="{Binding Amount, Mode=TwoWay}"
                                          FontSize="20"/>
                        <Button x:Name="RemoveFromCartButton"
                                Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" 
                                Height="43" Width="42"
                                Click="UpdateAmount_Click"
                                Grid.Column="0">
                            <materialDesign:PackIcon Kind="Trash" 
                                         Foreground="Black"
                                         Height="15" Width="15"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid x:Name="LeftGrid" Visibility="{Binding , Converter=IntToVisibiltyConverter}">
            <TextBlock Name="PaymentLabel"
            HorizontalAlignment="Left" 
            Margin="58,141,0,0" 
            TextWrapping="Wrap" 
            Text="סך הכל לתשלום" 
            VerticalAlignment="Top"
            Height="37" Width="162"
            FontSize="22" 
            FontWeight="Bold"/>

            <TextBlock Name="TotalPriceShow"
                   HorizontalAlignment="Left" 
                   Margin="220,141,0,0" 
                   TextWrapping="Wrap" 
                   Text="{Binding Path= TotalPrice}" 
                   VerticalAlignment="Top" 
                   Width="120" 
                   RenderTransformOrigin="0.933,0.352"
                   Height="37" 
                   FontSize="22" 
                   TextAlignment="Right"/>

            <Button x:Name="ApproveOrder"
                Content="למעבר לקופה"
                HorizontalAlignment="Left"
                Margin="20,311,0,0" 
                VerticalAlignment="Top"
                RenderTransformOrigin="0.473,-0.704" 
                Width="155" Height="54"
                FontSize="20"/>

            <Button Name="GoBackToCatalog"
                Content="להמשך קניה"
                HorizontalAlignment="Left"
                Margin="192,311,0,0" 
                VerticalAlignment="Top"
                Width="148" Height="54"
                FontSize="20" 
                Click="GoBackToCatalog_Click" RenderTransformOrigin="0.47,1.731"/>

            <TextBlock Name="OrderSummery"
                   HorizontalAlignment="Left"
                   Margin="208,41,0,0" 
                   TextWrapping="Wrap"
                   Text=":סיכום הזמנה" 
                   VerticalAlignment="Top"
                   FontSize="22" FontWeight="Bold"/>

            <TextBlock Name="LabelAmount"
            HorizontalAlignment="Left" 
            Margin="76,96,0,0" 
            TextWrapping="Wrap" 
            Text="מוצרים בעגלה" 
            FontSize="22"
            VerticalAlignment="Top"
            Width="198"/>

            <TextBlock  Name="AmountInCart"
            HorizontalAlignment="Left" 
            Margin="241,96,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Path= OrderItems.Count}"
            VerticalAlignment="Top" 
            FontSize="22"
            Width="66" TextAlignment="Right"/>
        </Grid>

        <Image Name="CryBaby"
            HorizontalAlignment="Left" 
            Height="376" 
            Margin="188,50,0,0" 
            VerticalAlignment="Top" 
            Width="386" Source="/Cart/sadBaby.png" Grid.ColumnSpan="2"/>

        <Button Name="All"
                HorizontalAlignment="Left"
                Margin="215,410,0,0" Click="GoBackToCatalog_Click"
                VerticalAlignment="Top"
                Width="338" Height="80"
                FontSize="20" Grid.ColumnSpan="2" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Cart/start.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
