<Page x:Class="PL.Cart.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Cart"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      Title="Cart">

    <Grid x:Name="CartGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView x:Name="OrderItemView" Margin="0,10,0,-10" Grid.Column="1" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
                              RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
                              ItemWidth="{Binding (ListView.View).ItemWidth, 
                              RelativeSource={RelativeSource AncestorType=ListView}}"
                              MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}"
                              ItemHeight="{Binding (ListView.View).ItemHeight, 
                              RelativeSource={RelativeSource AncestorType=ListView}}" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Path}" Width="100"  Height="100"></Image>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                        <TextBlock Text="{Binding Price}" FontSize="20"></TextBlock>
                        <Button x:Name="AddToCartButton"
                                Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" 
                                Height="43" Width="42">
                            <materialDesign:PackIcon Kind="TrashCanEmpty" 
                                         Foreground="Black"
                                         Height="15" Width="15"/>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Name="PaymentLabel"
            HorizontalAlignment="Left" 
            Margin="84,147,0,0" 
            TextWrapping="Wrap" 
            Text="סך הכל לתשלום" 
            VerticalAlignment="Top"
            
            Height="37" Width="162"
            FontSize="22" FontWeight="Bold"/>
        <TextBlock Name="TotalPriceShow"
            HorizontalAlignment="Left" 
            Margin="219,143,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding TotalPrice}" 
            VerticalAlignment="Top" 
            Width="120" RenderTransformOrigin="0.933,0.352" Height="37" FontSize="22" TextAlignment="Right"/>
        <Button x:Name="ApproveOrder"
                Content="למעבר לקופה"
                HorizontalAlignment="Left"
                Margin="223,310,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="0.473,-0.704" 
                Width="155" Height="54"
                FontSize="20"/>
        <Button Name="GoBackToCatalog"
                Content="להמשך קניה"
                HorizontalAlignment="Left"
                Margin="41,310,0,0" 
                VerticalAlignment="Top"
                Width="154" Height="54"
                FontSize="20" 
                Click="GoBackToCatalog_Click"/>
        <TextBlock Name="OrderSummery"
                   HorizontalAlignment="Left"
                   Margin="206,70,0,0" 
                   TextWrapping="Wrap"
                   Text=":סיכום הזמנה" 
                   VerticalAlignment="Top"
                   FontSize="22" FontWeight="Bold"/>
        <TextBlock Name="LabelAmount"
            HorizontalAlignment="Left" 
            Margin="84,109,0,0" 
            TextWrapping="Wrap" 
            Text="מוצרים בעגלה" 
            FontSize="22"
            VerticalAlignment="Top"
            Width="198"/>
        <TextBlock  Name="AmountInCart"
            HorizontalAlignment="Left" 
            Margin="272,109,0,0" 
            TextWrapping="Wrap" 
             
            VerticalAlignment="Top" 
            FontSize="22"
            Width="66" TextAlignment="Right"/>
        <Image Name="CryBaby"
               Visibility="Hidden"
            HorizontalAlignment="Left" 
            Height="376" 
            Margin="192,34,0,0" 
            VerticalAlignment="Top" 
            Width="386" Source="/Cart/sadBaby.png" Grid.ColumnSpan="2"/>
        <Button Name="All"
                Visibility="Hidden"
                HorizontalAlignment="Left"
                Margin="215,410,0,0" Click="GoBackToCatalog_Click"
                VerticalAlignment="Top"
                Width="338" Height="80"
                FontSize="20" Grid.ColumnSpan="2" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Cart/start.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
