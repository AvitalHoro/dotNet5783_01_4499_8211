<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Frame x:Name="framePage"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Width="890" Height="550"
               NavigationUIVisibility="Hidden" Margin="0,0,0,0" Grid.RowSpan="2" Grid.Row="1"/>
            
        <ListView Name="ListCategories" 
                  Grid.Row="1"
                  HorizontalAlignment="Center" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" Margin="5" MaxHeight="150"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <!--  <ListView.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="100"
                        Height="100">
                     </Button>
                </DataTemplate>
            </ListView.ItemTemplate>-->
            <ListViewItem>
                <Button
                        Width="110"
                        Height="105"
                        Padding="0">
                    <StackPanel>
                        <Image
                        Source="/7.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button
                        Width="110"
                        Height="105"
                        Padding="0">
                    <StackPanel>
                        <Image
                        Source="/6.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button
                        Width="110"
                        Height="105"
                        Padding="0">
                    <StackPanel>
                        <Image
                        Source="/5.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button
                        Width="110"
                        Height="105"
                        Padding="0">
                    <StackPanel>
                        <Image
                        Source="/4.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button
                        Width="110"
                        Height="105"
                        Padding="0">
                    <StackPanel>
                        <Image
                        Source="/3.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
        </ListView>
        <Grid x:Name="pas" 
              HorizontalAlignment="Left" 
              Height="64" 
              VerticalAlignment="Center" 
              Width="800" 
              Background="#FFEA4851" 
              Grid.ColumnSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="614*"/>
                <ColumnDefinition Width="187*"/>
            </Grid.ColumnDefinitions>
            <Button BorderBrush="{x:Null}" Margin="10,8,556,10">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconAdmin.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button BorderBrush="{x:Null}" Margin="67,4,496,8">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconCart.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button BorderBrush="{x:Null}" Margin="128,8,442,8">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconOrder.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Image Source="/Images/SearchBox.png" Stretch="Fill" Margin="226,12,52,12"/>
            <Button x:Name="categories"
                    BorderBrush="{x:Null}" 
                    Margin="549,-3,105,-2"
                    RenderTransformOrigin="0.5,0.5"
                    Grid.ColumnSpan="2" 
                    Click="OpenCategories_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.335"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconCategory.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button x:Name="logo" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Margin="68,0,-1,0" Grid.Column="1" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/logo.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Height="24" Margin="238,0,0,0" VerticalAlignment="Center" Width="22" BorderBrush="{x:Null}" IsCancel="True">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/SearchIcon.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Frame x:Name="Up" 
               HorizontalAlignment="Center" 
               Height="79" 
               VerticalAlignment="Center"
               Width="890" />
    </Grid>
</Window>
