<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Frame x:Name="framePage"
               HorizontalAlignment="Center"
               Width="800"
               Height="570"
               NavigationUIVisibility="Hidden" 
               Grid.RowSpan="3"
               Margin="0,46,0,-42"/>

        <ListView Name="ListCategories"
                  HorizontalAlignment="Center"
                  MouseMove="showCategory"
                    MouseLeave="hideCategory" Margin="0,0,0,102" Grid.Row="1">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" Margin="5" MaxHeight="150"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListViewItem>
                <Button Name="All"
                        Width="110"
                        Height="105"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/all.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Bottles"
                        Width="110"
                        Height="105"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/Images/7.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Diapers"
                        Width="110"
                        Height="105"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/Images/6.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Clothes"
                        Width="110"
                        Height="105"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/Images/5.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Carts"
                        Width="110"
                        Height="105"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/Images/4.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Toys"
                        Width="110"
                        Height="105"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>
                        <Image
                        Source="/Images/3.png"
                        Width="105"
                        Height="105"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
        </ListView>

        <StackPanel Margin="0,0,-1,0" Orientation="Horizontal" Background="#FFEA4851">

            <Button x:Name="SelectAdmin"  BorderBrush="{x:Null}"  Click="SelectAdmin_Click" Height="42" Width="52" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconAdmin.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <Button x:Name="OpenCart" BorderBrush="{x:Null}" Click="showCartDetails" Height="46" Width="46">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconCart.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button x:Name="OpenTrackingOrder" BorderBrush="{x:Null}" Height="44" Width="55" Click="OpenTrackingOrder_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconOrder.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Image Source="/Images/SearchBox.png" Stretch="Fill" Height="54" Width="387"/>
            <Button x:Name="categories"
                MouseEnter="showCategory"
                    MouseLeave="hideCategory"
                BorderBrush="{x:Null}"
                RenderTransformOrigin="0.5,0.5" 
                Click="OpenCategories_Click" IsEnabled="{Binding Content, ElementName=framePage, UpdateSourceTrigger=PropertyChanged}" Height="74" Width="126">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/iconCategory.png" Stretch="Uniform"/>
                </Button.Background>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.335"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="logo" Click="showHomePage" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Height="67" Width="122" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/logo.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <TextBox Name="EnterStringToSearch"
                HorizontalAlignment="Left"
                Margin="203,0,0,0" 
                TextWrapping="Wrap"
                VerticalAlignment="Center" 
                Width="314" 
                 TextAlignment="Right"
                 FontSize="16"
                 BorderBrush="#89FFFFFF"
                  KeyDown="EnterPressed_KeyDown"/>
        <Button x:Name="SearchButton" 
                Click="search" 
                BorderBrush="{x:Null}" 
                IsCancel="True"
                Height="29" 
                Width="29" 
                Margin="162,18,609,17">
            <Button.Background>
                <ImageBrush ImageSource="/Images/SearchIcon.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
